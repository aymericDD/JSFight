doctype html
html(ng-app="JSFight" ng-strict-di="true")
  head
    title= title
    meta(name='viewport' content='initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/angular_material/0.9.0/angular-material.min.css')
  body(layout="column")
    block header
      md-toolbar(layout="row")
        div(class="md-toolbar-tools")
          h1 {{ 'APP_TITLE' | translate }}
          span(flex)
          md-button(ng-click="$root.setLanguage('fr')" ) {{ 'APP_FR' | translate }}
          md-button(ng-click="$root.setLanguage('en')") {{ 'APP_EN' | translate }}
          span(ng-if="$root.user" ng-disabled="true") {{ 'APP_LOGGED_AS' | translate: $root.user }}
          md-button(ng-if="$root.user && !$root.disabledLogout" ng-click="$root.DisconnectUser()") {{ 'APP_LOGOUT' | translate }}
          md-button(ng-if="$root.user && $root.disabledLogout" ng-disabled="true" ng-click="$root.DisconnectUser()") {{ 'APP_LOGOUT' | translate }}
          md-button(ng-if="!$root.user" ng-disabled="true" ) {{ 'APP_NOT_LOGGED' | translate }}
    block content
    block footer

    div.container-fluid(ng-view)

  script(type="text/javascript" src="/javascripts/languages/en.js")
  script(type="text/javascript" src="/javascripts/languages/fr.js")
  script(type="text/javascript" src="/javascripts/libs/angular.min.js")
  script(type="text/javascript" src="/javascripts/libs/angular.route.min.js")
  script(type="text/javascript" src="/javascripts/libs/angular.sanitize.min.js")
  script(type="text/javascript" src="/javascripts/libs/angular.translate.min.js")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-animate.min.js")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-messages.min.js")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-aria.min.js")
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.0/angular-material.min.js")
  script(type="text/javascript" src="/javascripts/libs/socket.io-1.3.4.js")
  script(type="text/javascript" src="/javascripts/app.js")
  script(type="text/javascript" src="/javascripts/factories/UserFactory.js")
  script(type="text/javascript" src="/javascripts/factories/MessageFactory.js")
  script(type="text/javascript" src="/javascripts/factories/PlayerFactory.js")
  script(type="text/javascript" src="/javascripts/factories/WindowFactory.js")
  script(type="text/javascript" src="/javascripts/factories/AnimatingSpriteFactory.js")
  script(type="text/javascript" src="/javascripts/controllers/LoginCtrl.js")
  script(type="text/javascript" src="/javascripts/controllers/ChatCtrl.js")
  script(type="text/javascript" src="/javascripts/controllers/GameCtrl.js")